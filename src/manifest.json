{
  "manifest_version": 2,
  "name": "DotGit",
  "version": "3.7.4",
  "description": "An extension to check if .git is exposed in visited websites",
  "icons": {
    "16": "assets/icons/dotgit-16.png",
    "32": "assets/icons/dotgit-32.png",
    "48": "assets/icons/dotgit-48.png",
    "96": "assets/icons/dotgit-96.png",
    "128": "assets/icons/dotgit-128.png"
  },
  "permissions": [
    "*://*/*",
    "webRequest",
    "storage",
    "notifications",
    "downloads"
  ],
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_title": "DotGit",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}